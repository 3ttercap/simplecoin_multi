# Stratum + Powerpool Config
# =======================================================================
# Default values for new miner config
default_stratum_url: stratum+tcp://stratum.simplemulti.com
default_stratum_port: 3363

# Where's powerpool running?
mining_servers:
    # Dict keyed by algo, contains a list item for each mining port. Each of
    # these ports should be open on every server (or it'll be very confusing
    # to users)
    Scrypt:
      - pp_location: localhost
        stratum_port: 3363
        monitor_port: 3856
        diff: 64-2048
        title: Scrypt Multi PPLNS
        sharechain_id: 1
        fee_perc: 0.02
        monitor: 3855
      - pp_location: localhost
        stratum_port: 3364
        monitor_port: 3856
        diff: 64-2048
        title: LTC/Doge PPLNS
        sharechain_id: 2
        fee_perc: 0.01
    X11:
      - pp_location: localhost
        stratum_port: 3373
        monitor_port: 3856
        diff: 64-2048
        title: X11 Multi PPLNS
        sharechain_id: 3
        fee_perc: 0.02
      - pp_location: localhost
        stratum_port: 3374
        monitor_port: 3856
        diff: 64-2048
        title: DRK PPLNS
        sharechain_id: 4
        fee_perc: 0.01

# Represents an server location
stratums:
    - address: stratum+tcp://ca.simplemulti.com
      location_acronym: CA
      location: Beauharnois, Canada
      country_flag: "/img/ca.svg"
    - address: stratum+tcp://uk.simplemulti.com
      location_acronym: UK
      location: London, United Kingdom
      country_flag: "/img/uk.svg"

# Currency configs
# =======================================================================
# Average hashes for each algo - used for stats + graphs calculations
algos:
    X11:
        hashes_per_share: 4294967296
    scryptn:
        hashes_per_share: 65536
    scrypt:
        hashes_per_share: 65536

currencies: 
    DRK:
        # The algorithm for the currency
        algo: X11
        # Full name of what to label the merged coin on the site
        name: Darkcoin
        # BTC, LTC, etc..
        currency_name: DRK
        # connection information for the merge coinserver RPC
        coinserv:
            port: 19001
            address: localhost
            username: admin1
            password: 123
        # prefix that is checked for to payout the address
        address_version: [76]
        # required number of transaction confirmations before marking confirmed
        trans_confirmations: 6
        # the expected time for the network to find a block in seconds. used for
        # computing network hashrate
        block_time: 120
        # how many confirmations do we wait before marking blocks mature
        # and allowing payout over RPC
        block_mature_confirms: 2
        # whether or not we currently can exchange this currency. This is
        # used to determine valid user addresses
        exchangeable: True
    URO:
        # The algorithm for the currency
        algo: X11
        # Full name of what to label the merged coin on the site
        name: Urocoin
        # BTC, LTC, etc..
        currency_name: URO
        # connection information for the merge coinserver RPC
        coinserv:
            port: 20001
            address: localhost
            username: admin1
            password: 123
        # prefix that is checked for to payout the address
        address_version: [68]
        # required number of transaction confirmations before marking confirmed
        trans_confirmations: 6
        # the expected time for the network to find a block in seconds. used for
        # computing network hashrate
        block_time: 120
        # how many confirmations do we wait before marking blocks mature
        # and allowing payout over RPC
        block_mature_confirms: 2
        # whether or not we currently can exchange this currency.
        # Used to determine valid user addresses
        exchangeable: True

# set this to true and celery will only run scheduled tasks to refresh cache
# objects. This allows you to run a staging version on the same database,
# but with separate caches
#stage: False

# Cache configuration
# ========================================================================
# The cache database that redis will use
redis_conn:
